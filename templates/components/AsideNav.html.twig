<div id="navbarParent" class="sn-nav-in-front column is-3-fullhd is-3-widescreen is-3-desktop is-4-tablet is-position-sticky" style="top: -1px; z-index: 1; background-color: white">
    <div class="sn-nav-in-front is-position-sticky mt-3 px-4" style="top: -1px;">

        <section class="is-flex-mobile">
            <a role="button" id="navbarHamburger" class="is-1-mobile is-0-tablet column mr-3 navbar-burger container-center is-fullwidth is-hidden-tablet" aria-label="menu" aria-expanded="false">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>

            {% if form %}

                {{ form_start(form) }}
                <div class="field has-addons has-text-left is-fullwidth column is-12-tablet is-11-mobile">
                    <div class="control has-icons-left">
                        <input required value="{{ field_value(form.searchText) }}" type="text" placeholder="{{ field_label(form.searchText) }}" name="{{ field_name(form.searchText) }}" class="focusTransition form-control input">
                        <span class="icon is-left is-small">
                            {{ ux_icon('octicon:search-24', {height: '16px', width: '16px', 'aria-hidden': true}) }}
                        </span>
                    </div>
                    <div class="control">
                        <button type="submit" id="search-btn" class="button is-info">
                            Search
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}

            {% endif %}

        </section>

        <aside id="navbar" class="menu pt-3">

            <ul class="menu-list txt-sp">
                <li class="has-text-weight-medium is-size-4" style="user-select: none;">
                    <a id="notes" class="{{ app.request.get('_route') == 'dashboard' ? 'is-active-sn' : 'none' }}" href="{{ app.request.get('_route') == 'dashboard' ? '#' : path('dashboard') }}">
                        <span class="icon is-left ">
                            {{ ux_icon('proicons:note', {height: '32px', width: '32px', 'aria-hidden': true})}}
                        </span>
                        <span>Notes</span>
                    </a>


                    <ul data-controller="notesOptions" id="notesOptions">
                        <li style="user-select: none;">
                            <a href="{{ path('new_note') }}">
                                <span class="icon is-left">
                                     {{ ux_icon('proicons:add-circular') }}
                                </span>
                                Create Note
                            </a>
                        </li>
                    {% if app.request.get('_route') == 'archived' %}
                    </ul>
                    {% endif %}

                    {% if app.request.get('_route') != 'archived' %}

                        <li id="notesAdd-tag" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                                <span class="icon is-left">
                                    {{ ux_icon('proicons:tag') }}
                                </span>
                                Add a Tag
                            </a>
                        </li>

                        <li id="notesAdd-archived" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                                <span class="icon is-left">
                                    {{ ux_icon('proicons:archive-add-2') }}
                                </span>
                                Move to archived
                            </a>
                        </li>

                        <li id="notesRemove-note" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                                <span class="icon is-left">
                                    {{ ux_icon('proicons:delete') }}
                                </span>
                                Delete
                            </a>
                        </li>
                    </ul>
                    {% endif %}


                <li class=" is-size-4 has-text-weight-medium" style="user-select: none;">
                    <a id="archived" class="{{ app.request.get('_route') == 'archived' ? 'is-active-sn' : 'none' }}" href="{{ app.request.get('_route') == 'archived' ? '#' : path('archived') }}">
                        <span class="icon is-left">
                            {{ ux_icon('proicons:archive') }}
                        </span>
                        Archived
                    </a>

                    {% if app.request.get('_route') == 'archived' %}
                    <ul data-controller="archivedOptions" id="archivedOptions">
                        <li id="archiveAdd-tag" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                        <span class="icon is-left">
                            {{ ux_icon('proicons:tag') }}
                        </span>
                                Add Tags
                            </a>
                        </li>

                        <li id="archiveRemove-archived" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                        <span class="icon is-left">
                            {{ ux_icon('proicons:checkbox-indeterminate') }}
                        </span>
                                Remove from archived
                            </a>
                        </li>

                        <li id="archiveDelete-note" class=" is-size-4 has-text-weight-medium is-hidden" style="user-select: none;">
                            <a>
                        <span class="icon is-left">
                            {{ ux_icon('proicons:delete') }}
                        </span>
                                Delete
                            </a>
                        </li>
                    </ul>
                    {% endif %}
                </li>

                <li class=" is-size-4 has-text-weight-medium" style="user-select: none;">
                    <a id="reminder" class="{{ app.request.get('_route') == 'reminders' ? 'is-active-sn' : 'none' }}" href="{{ app.request.get('_route') == 'reminders' ? '#' : path('reminders') }}">
                        <span class="icon is-left">
                            {{ ux_icon('proicons:bell') }}
                        </span>
                        Reminders
                    </a>
                </li>

                <hr>

                <!-- PROFILE PART -->
                <li class=" is-size-4 has-text-weight-medium " style="user-select: none;">
                    <a id="user">
                        <span class="icon is-left icon-sp">
                            {{ ux_icon('proicons:person-2') }}
                        </span>
                        <span class="txt-sp">{{ this.username }}</span>
                    </a>
                    <ul id="userOptions">
                        <li style="user-select: none;">
                        </li>

                        <li style="user-select: none;" class="is-danger">
                            <a id="logOutOption" href="{{ path('app_logout', {'id' : this.userId}) }}">
                                <span class="icon is-left">
                                      {{ ux_icon('icon-park-outline:logout') }}
                                </span>
                                Log out
                            </a>
                        </li>
                    </ul>
                </li>
        </aside>
    </div>
</div>