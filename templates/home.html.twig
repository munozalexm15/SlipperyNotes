<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('homePage') }}
        {% endblock %}
    </head>
    <body class="no-scrollbar">
        {% block body %}
        <section class="banner">
            <div class="container-parallax">
                <div id="scene">
                    <div class="layer" data-depth="0.2"><img src="{{ asset('images/home/cube_left.png') }}" alt="Symfony!"/></div>
                    <div class="layer" data-depth="0.15"><img src="{{ asset('images/home/cube_right.png') }}" alt="Symfony!"/></div>
                    <div class="layer" data-depth="0.1"><img src="{{ asset('images/home/small_cube_left.png') }}" alt="Symfony!"/></div>
                    <div class="layer" data-depth="0.05"><img src="{{ asset('images/home/small_cube_right.png') }}" alt="Symfony!"/></div>

                </div>
            </div>

            <section class="hero is-fullheight">
                <div class="hero-body has-text-centered">
                    <div class="container">
                        <div class="container is-size-1 has-text-weight-bold">
                            <div class="p-5" style="font-size: 1.3em;">
                                <span {{ stimulus_controller('symfony/ux-typed', {
                                    strings: ['Let your thoughts slide into a note', 'Slippery Notes'],
                                    smartBackspace: true,
                                    startDelay: 100,
                                    backSpeed: 1,
                                    backDelay: 3000,
                                    loop: false,
                                    showCursor: true,
                                    cursorChar: '|'
                                }) }}></span>
                            </div>
                            <a href="{{ path('app_login') }}">
                                <button id="startBtn" class="mt-5" {{ vue_component('buttonHome', {'text': "START CREATING"}) }}></button>
                            </a>
                            <div class="columns is-3">
                                <div class="column"></div>
                                <div class ="is-5 row column is-centered m-5" {{ vue_component('noteCard', { 'userCount': userCount, 'notesCreated': notesCreated }) }}></div>
                                <div class="column"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>
        {% endblock %}
    </body>
</html>
